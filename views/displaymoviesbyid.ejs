<html>
    <head>
        <link href="/stylesheets/style.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Fira+Sans&family=Mochiy+Pop+One&family=Open+Sans&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/jquery.js"></script>
    </head>
    <body>
        <form action="/movies/edit_delete_movies" method="post">
            <input type="hidden" value="<%=data.movieid%>" name="movieid">
        <div class="maincontainer">
            <div class="box">
                <div class="container">
                    <div class="row">
                        <div class="col-12 headstyle centerstyle">
                            <img src="/images/move.png" width="35">
                            <span>Update Movie Ticket</span>
                            <a href="/movies/submit_all_movies" style="margin-left: auto; cursor: pointer;" ><img src="/images/list.jpeg" width="50"/></a>  
                        </div>
                    </div>
                    

                    <div class="row">
                        <div class="col-12">
                            <hr>                           
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <select class="form-select " id="stateid" name="stateid">
                                <option value="<%=data.stateid %>" ><%=data.statename %></option>
                                
                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select " id="cityid" name="cityid">
                                <option value="<%=data.cityid %>"><%=data.cityname%></option>
                                
                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select" id="cinemaid" name="cinemaid">
                                <option value="<%=data.cinemaid %>"><%=data.cinemaname%></option>
                              </select>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 8px;">
                        <div class="col-6">
                            <select class="form-select " id="screenid" name="screenid" >
                                <option value="<%=data.screenid %>" ><%=data.screenname%></option>
                                
                              </select>
                        </div>
                        <div class="col-6" >
                            <input type="text" value="<%=data.moviename%>"  class="form-control"  name="moviename" id="moviename" placeholder="Movie Name" >
                        
                        </div>
                    </div>

                    <div class="row" style="margin-top: 8px;">
                        
                        <div class="col-12" >
                            <textarea class="form-control" name="description" id="description" placeholder="Movie Description here...." ><%=data.description %> </textarea>
                        </div>
                    </div>

                    <div class="row"  style="margin-top: 8px;">
                        <div class="col-4">
                          <input type="text" value="<%=data.actor %>"  class="form-control"  name="actor" id="actor" placeholder="Actor Name" >
                        </div>
                        <div class="col-4">
                          <input type="text" value="<%=data.actress %>"  class="form-control" name="actress" id="actress" placeholder="Actress Name" >
                        </div>
                        <div class="col-4">
                            <input type="text" value="<%=data.singer %>"  class="form-control" name="singer" id="singer" placeholder="Singer Name" >
                          </div>
                    </div>

                    <div class="row" style="margin-top: 8px;">
                        <div class="col-6">
                            <input type="date" value="<%=data.releasedate %>" class="form-control"   name="releasedate" >
                        </div>
                        <div class="col-6" >
                            <input type="text" class="form-control" id="ticketprice" name="ticketprice" value="<%=data.ticketprice %>"  placeholder="Ticket Price">
                        </div>
                    </div>

               <%
                 var avl={'2D':false,'3D':false} 
                 avl[data.status]=true              
               
               %>


                    <div class="col-12">
                        <div class="form-check form-check-inline">
                            <input <%=avl['2D']?'checked':''%> class="form-check-input" type="radio" name="status" id="2D"  value="2D">
                            <label class="form-check-label" for="2D">2D</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input <%=avl['3D']?'checked':''%> class="form-check-input" type="radio" id="3D" name="status" value="3D">
                            <label class="form-check-label" for="3D">3D</label>
                          </div>
                    </div>
                   

                

                    <div class="row" style="margin-top: 10px;">
                        <div class="col-6" style="display:flex; align-items: center; justify-content: center;">
                            <button  type="submit" name="btn" value="Edit" class="btn btn-primary" style="width: 200px;">Edit</button>                          
                        </div>

                        <div class="col-6" style="display:flex; align-items: center; justify-content: center;">
                            <button type="submit"  name="btn" value="Delete" class="btn btn-primary" style="width: 200px;">Delete</button>
                        </div>
                    </div>

                   <div class="row" style="margin-top: 10px;">
                    <div class="col-12" style="display:flex; align-items: center; justify-content: center;">
                         <%=message %>
                    </div>
                
                
                    </div>


                </div>
            </div>
        </div>
        
    </form>
    </body>
</html>